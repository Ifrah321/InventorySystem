<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="eee.MainWindow"
        Width="800" Height="500"
        Title="Inventory System">

    <StackPanel Margin="20">
        <TextBlock Text="Inventory System"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*">
            <TextBlock Text="Queued Orders" FontWeight="Bold" Grid.Column="0"/>
            <TextBlock Text="Processed Orders" FontWeight="Bold" Grid.Column="1"/>

            <ListBox x:Name="QuedOrdersList"
                     Grid.Row="1" Grid.Column="0"
                     Height="200"
                     SelectionChanged="QuedOrdersList_SelectionChanged"/>

            <ListBox x:Name="ProcessedOrdersList"
                     Grid.Row="1" Grid.Column="1"
                     Height="200"/>
        </Grid>

        <TextBlock Text="Order details:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox x:Name="OrderDetailsList" Height="100"/>

        <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
            <Button Content="Process Next Order"
                    Width="180"
                    Click="ProcessNext_Click"
                    Grid.Column="0"/>
            <TextBlock x:Name="RevenueText"
                       Grid.Column="1"
                       Text="Total Revenue: 0 kr"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Grid>
    </StackPanel>
</Window>